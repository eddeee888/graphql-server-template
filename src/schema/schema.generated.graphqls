input CreateUserInput {
  firstName: String!
  id: ID!
  lastName: String!
}

type Mutation {
  createUser(input: CreateUserInput!): User!
  deleteUser(id: ID!): Boolean!
}

type Query {
  user(id: ID!): User
  users: [User!]!
}

type User {
  bestFriend: User
  firstName: String!
  fullName: String!
  id: ID!
  initials: String!
  lastName: String!
}
